{
    "name": "oca/talk_xmpp_bridge",
    "description": "A bridge between Nextcloud Talk and the XMPP protocol.",
    "type": "nextcloud-app",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Gemini"
        }
    ],
    "require": {
        "php": "^8.0",
        "norgul/xmpp-php": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "OCA\\TalkXMPPBridge\\": "lib/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix"
    }
}
